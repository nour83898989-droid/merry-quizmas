# ===========================================
# ENVIRONMENT VARIABLES FOR QUIZ APP
# Copy this to .env.local and fill in values
# ===========================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Farcaster
FARCASTER_DEVELOPER_MNEMONIC=your_mnemonic_for_signing

# Neynar API (for Farcaster user lookup)
# Get your API key at https://neynar.com - free tier available
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key

# OnchainKit / Base MiniKit (Coinbase Developer Portal)
# Get your API key at https://portal.cdp.coinbase.com
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Token Addresses (Base Mainnet - Chain ID: 8453)
NEXT_PUBLIC_BANGER_TOKEN_ADDRESS=0x2800f7bbdd38e84f38ef0a556705a62b5104e91b
NEXT_PUBLIC_SUP_TOKEN_ADDRESS=0xa69f80524381275a7ffdb3ae01c54150644c8792
NEXT_PUBLIC_USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

